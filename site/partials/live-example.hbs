<section class="live-example" id="{{slugify title}}"
         data-live-example="{{exampleCode id}}">
  <header class="live-example-header">
    <h{{level}}>{{title}}</h{{level}}>
  </header>
  <div class="chart">
    <div class="ct-chart{{#if classes}} {{classes}}{{/if}}"></div>
  </div>
  <aside class="live-code">
    <div class="introduction">
      <p class="text">{{{intro}}}</p>
      <button class="edit-button">Edit Example</button>
    </div>
    <div class="editor-area">
      <textarea class="code-editor"></textarea>
      <button class="close-edit-button">Close Editor</button>
    </div>
  </aside>
</section>
